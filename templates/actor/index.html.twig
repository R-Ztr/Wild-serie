{% extends 'base.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}

{% block body %}
    <h1>Liste de tous les acteurs </h1>
    <ul>
     {% for actor in actors %}
     <li>
        <a href="{{ path("actor_show", { id: actor.id }) }}">{{ actor.firstname }}</a>
        <img src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.firstname }}">
    </li>

    {% else %}
    <li>Aucun acteur pour cette s√©rie</li>
    {% endfor %}

{% endblock %} 
